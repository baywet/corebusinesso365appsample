@using SnowProCorp.ShipmentsWeb.Helper
@model SnowProCorp.ShipmentsWeb.ViewModel.GenericPagingInfo<List<SnowProCorp.DAL.Shipment>>

@if (Model.Data != null && Model.Data.Any())
{
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Data.First().Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data.First().Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data.First().OrderingDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data.First().OrderedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data.First().PickedUpDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data.First().DeliveredDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Data)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PickedUpDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveredDate)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
@Html.PageLinks(Model.PagingInfo, i => Url.Action("List", new { pageNumber = i }))
    
}
else
